<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:background="#ffa9a9a9"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/admin_modal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48px"
        android:text="@string/admin_setting"
        android:textSize="40px" />
    
     <TextView
        android:id="@+id/admin_modal_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/admin_modal_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:text="ver"
        android:textSize="30px" />
     
      <TextView
        android:id="@+id/admin_modal_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/admin_modal_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:text="sn"
        android:textSize="30px" />
    
     <ImageButton 
         android:id="@+id/admin_btnback"
         android:background="@drawable/back_selector"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="36px"
         android:layout_marginTop="48px"
         />

     
     <Button
            android:id="@+id/admin_match"
            android:layout_width="312px"
            android:layout_height="96px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="300px"
            android:layout_centerVertical="true"
            android:background="@drawable/agree_selector"
            android:text="配对"
             android:gravity="center"
            android:textColor="@color/white"
            android:textSize="36px"
            android:textStyle="bold" />
     
     <Button
            android:id="@+id/admin_config_mode"
            android:layout_width="312px"
            android:layout_height="96px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="300px"
            android:background="@drawable/agree_selector"
            android:text="@string/modifi_idsn"
             android:gravity="center"
            android:textColor="@color/white"
            android:textSize="36px"
            android:textStyle="bold" />
     
     <Button
            android:id="@+id/btnBright"
            android:layout_width="312px"
            android:layout_height="96px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="300px"
            android:layout_marginTop="30dp"
            android:layout_below="@id/admin_match"
            android:background="@drawable/agree_selector"
            android:text="bright"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="36px"
            android:textStyle="bold" 
            android:visibility="gone"
            />
     
     <Button
            android:id="@+id/btnDark"
            android:layout_width="312px"
            android:layout_height="96px"
             android:layout_below="@id/admin_config_mode"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="300px"
            android:background="@drawable/agree_selector"
            android:text="dark"
             android:gravity="center"
            android:textColor="@color/white"
            android:textSize="36px"
            android:textStyle="bold" 
             android:visibility="gone"
            />
     
     
</RelativeLayout>
