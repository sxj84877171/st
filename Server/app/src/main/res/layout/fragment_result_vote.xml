<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff004586"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/fragment_result_vote_top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px" >

        <ImageButton
            android:id="@+id/fragment_result_vote_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:background="@drawable/back_white_selector"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/fragment_result_bill_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="55px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_result_sub_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_result_vote_top_panel"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="0px"
        android:gravity="center"
        android:text=" "
        android:textColor="@color/white"
        android:textSize="55px" />

    <RelativeLayout
        android:id="@+id/fragment_result_page_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55sp"
        android:layout_marginLeft="250px"
        android:layout_marginRight="250px" >

        <TextView
            android:id="@+id/fragment_result_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1/1"
            android:textColor="@color/white"
            android:textSize="30px" />

        <Button
            android:id="@+id/fragment_result_pageup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@id/fragment_result_page"
            android:background="@drawable/page_selector"
            android:text="@string/page_up" />

        <Button
            android:id="@+id/fragment_result_pagedown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/fragment_result_page"
            android:background="@drawable/page_selector"
            android:text="@string/page_down" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_result_memo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_result_page_panel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="55sp" />

    <RelativeLayout
        android:id="@+id/fragment_result_option_panel4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_result_memo"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="200px"
        android:layout_marginRight="200px" >


         <TextView
            android:id="@+id/fragment_result_option_vl4"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true" />
         
        <TextView
            android:id="@+id/fragment_result_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fragment_result_option_vl4"
            android:gravity="right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/fragment_result_value4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
             android:gravity="right"
            android:layout_alignLeft="@id/fragment_result_option_vl4"
            android:text=""
            android:textColor="@color/white"
            android:textSize="55sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_result_option_panel3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_result_option_panel4"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="200px"
        android:layout_marginRight="200px" >

        <TextView
            android:id="@+id/fragment_result_option_vl3"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/fragment_result_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fragment_result_option_vl3"
            android:gravity="right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/fragment_result_value3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignLeft="@id/fragment_result_option_vl3"
            android:text=""
            android:textColor="@color/white"
            android:textSize="55sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_result_option_panel2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_result_option_panel3"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="200px"
        android:layout_marginRight="200px" >
        
        <TextView
            android:id="@+id/fragment_result_option_vl2"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/fragment_result_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fragment_result_option_vl2"
            android:gravity="right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/fragment_result_value2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
           android:gravity="right"
            android:layout_alignLeft="@id/fragment_result_option_vl2"
            android:text=""
            android:textColor="@color/white"
            android:textSize="55sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_result_option_panel1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_result_option_panel2"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="200px"
        android:layout_marginRight="200px" >
        
        <TextView
            android:id="@+id/fragment_result_option_vl1"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/fragment_result_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_toLeftOf="@id/fragment_result_option_vl1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/fragment_result_value1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignLeft="@id/fragment_result_option_vl1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="55sp" />
    </RelativeLayout>

</RelativeLayout>