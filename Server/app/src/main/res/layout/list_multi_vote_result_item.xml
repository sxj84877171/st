<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
         >

        <TextView
            android:id="@+id/list_multi_result_item_num"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="1"
             android:textColor="@color/white"
            android:textSize="30px" />

        <TextView
            android:id="@+id/list_multi_result_item_name"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center"
             android:textColor="@color/white"
            android:textSize="30px" />

        <TextView
            android:id="@+id/list_multi_result_item_agree"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/agree"
             android:textColor="@color/white"
            android:textSize="30px" />

        <TextView
            android:id="@+id/list_multi_result_item_oppose"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/oppose"
             android:textColor="@color/white"
            android:textSize="30px" />

        <TextView
            android:id="@+id/list_multi_result_item_abstan"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/abstant"
             android:textColor="@color/white"
            android:textSize="30px" />

        <TextView
            android:id="@+id/list_multi_result_item_unvote"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/abstant"
             android:textColor="@color/white"
            android:textSize="30px" />

        <TextView
            android:id="@+id/list_multi_result_item_result"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="@string/pass"
             android:textColor="@color/white"
            android:textSize="30px" />
    </LinearLayout>

</RelativeLayout>