<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="258px" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1px"
        android:layout_marginTop="1px"
        android:background="@color/white" >

        <TextView
            android:id="@+id/list_multipingsheng_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40px"
            android:layout_marginTop="50px"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="72px" />

        <TextView
            android:id="@+id/list_multipingsheng_item_btn_abstain"
            android:layout_width="122px"
            android:layout_height="72px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28px"
            android:layout_centerVertical="true"
            android:background="@drawable/signin_selector"
            android:gravity="center"
            android:text="@string/abstant"
            android:textColor="@color/white"
            android:textSize="36px"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/list_multipingsheng_item_btn_oppose"
            android:layout_width="122px"
            android:layout_height="72px"
            android:layout_marginRight="28px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/list_multipingsheng_item_btn_abstain"
            android:background="@drawable/oppos_selector"
            android:gravity="center"
            android:text="@string/oppose"
            android:textColor="@color/white"
            android:textSize="36px"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/list_multipingsheng_item_btn_agree"
            android:layout_width="122px"
            android:layout_height="72px"
			android:layout_toLeftOf="@id/list_multipingsheng_item_btn_oppose"
            android:layout_marginRight="28px"
            android:layout_centerVertical="true"
            android:background="@drawable/agree_selector"
            android:gravity="center"
            android:text="@string/agree"
            android:textColor="@color/white"
            android:textSize="36px"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/list_multipingsheng_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:layout_marginRight="94px"
            android:layout_marginTop="20px"
            android:layout_toLeftOf="@id/list_multipingsheng_item_btn_agree"
            android:layout_toRightOf="@id/list_multipingsheng_item_num"
            android:gravity="center_vertical"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="38px" 
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/list_multipingsheng_item_xianren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_multipingsheng_item_name"
            android:layout_marginLeft="34px"
            android:layout_marginRight="94px"
            android:layout_marginTop="15px"
            android:layout_toLeftOf="@id/list_multipingsheng_item_btn_agree"
            android:layout_toRightOf="@id/list_multipingsheng_item_num"
            android:text="@string/xianren"
            android:textColor="@color/black"
            android:textSize="24px" />
        
        <TextView
            android:id="@+id/list_multipingsheng_item_niren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_multipingsheng_item_xianren"
            android:layout_marginLeft="34px"
            android:layout_marginRight="94px"
            android:layout_marginTop="10px"
            android:layout_toLeftOf="@id/list_multipingsheng_item_btn_agree"
            android:layout_toRightOf="@id/list_multipingsheng_item_num"
            android:text="@string/niren"
            android:textColor="@color/black"
            android:textSize="24px" />
        
         <TextView
            android:id="@+id/list_multipingsheng_item_nimian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_multipingsheng_item_niren"
            android:layout_marginLeft="34px"
            android:layout_marginRight="94px"
            android:layout_marginTop="10px"
             android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@id/list_multipingsheng_item_btn_agree"
            android:layout_toRightOf="@id/list_multipingsheng_item_num"
            android:text="@string/nimian"
            android:textColor="@color/black"
            android:textSize="24px" />

        <TextView
            android:id="@+id/list_multipingsheng_item_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="308px"
            android:layout_marginTop="50px"
            android:alpha="0.9"
            android:background="@drawable/voted_empty"
            android:gravity="center"
            android:rotation="-20"
            android:src="@drawable/agree_small"
            android:text=""
            android:textColor="#ddff9933"
            android:textSize="38px"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>